- const {slowScrollTo} = require('../../javascript/utils')
- const Menu = require('./../Menu/Menu')
- const Footer = require('./../Footer/Footer')
div.page
    //- a.hide(href="#content") Skip to content
    
    #menu
        Menu(translator=this.props.translator)

    #top.menu-open-container
        a#menu-open.text-center(onClick=slowScrollTo("#menu"))
            span= this.props.translator("Menu")

    if(this.props.loading)
        #content
            article.single.project
                .row.content.white-triange-bottom-border
                    .corners
                        h2.text-center= this.props.translator("Loading")
    else
        #content= this.props.children

    #footer-space
    #footer
        Footer(translator=this.props.translator, changeLocale=this.props.changeLocale)